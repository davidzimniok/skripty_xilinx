# Zastavit DFSR (už je zastavený)
Stop-Service DFSR -ErrorAction SilentlyContinue

# Nastavit authoritative restore přes PowerShell
$dfsrConfig = Get-CimInstance -Namespace root/microsoftdfs -ClassName dfsrMachineConfig
$dfsrConfig | Set-CimInstance -Property @{StopReplicationOnAutoRecovery=$false}

# Spustit DFSR
Start-Service DFSR

# Vynutit poll
dfsrdiag pollad
