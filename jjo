[Unit]
Description=FileBrowser PAM Web File Manager
After=network.target

[Service]
ExecStart=/path/to/filebrowser -r /home -a 0.0.0.0 -p 8080
User=root
Restart=on-failure

[Install]
WantedBy=multi-user.target


