for i in $(seq -w 1 25); do
    USER="p${i}"
    
    echo "Disabling screensaver for $USER"
    
    sudo mkdir -p /home/$USER/.config/lxsession/LXDE/
    
    sudo -u $USER bash -c "cat > /home/$USER/.config/lxsession/LXDE/desktop.conf << 'EOF'
[Session]
screensaver/mode=0
screensaver/lock_delay=0
EOF"
    
    sudo chown -R $USER:STUDENTS /home/$USER/.config/
done

for i in $(seq -w 1 25); do
    USER="q${i}"
    
    echo "Disabling screensaver for $USER"
    
    sudo mkdir -p /home/$USER/.config/lxsession/LXDE/
    
    sudo -u $USER bash -c "cat > /home/$USER/.config/lxsession/LXDE/desktop.conf << 'EOF'
[Session]
screensaver/mode=0
screensaver/lock_delay=0
EOF"
    
    sudo chown -R $USER:STUDENTS /home/$USER/.config/
done



# Associative array with teachers
declare -A TEACHERS
TEACHERS=(["micha"]="Michalek" ["hrn"]="HrnciarHrnciar" ["zim"]="ZimniokZimniok" ["pau"]="Pauckova" ["han"]="HankeHanke" ["hor"]="HorakHorak")

for USER in "${!TEACHERS[@]}"; do
    
    echo "Disabling screensaver for $USER"
    
    sudo mkdir -p /home/$USER/.config/lxsession/LXDE/
    
    sudo -u $USER bash -c "cat > /home/$USER/.config/lxsession/LXDE/desktop.conf << 'EOF'
[Session]
screensaver/mode=0
screensaver/lock_delay=0
EOF"
    
    sudo chown -R $USER:STUDENTS /home/$USER/.config/
done
