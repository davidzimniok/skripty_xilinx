# Pro studenty p01-p25:
for i in $(seq -w 1 25); do
    USER="p${i}"
    PASSWORD="${i}${i}${i}${i}"
    
    echo "Changing password for $USER to $PASSWORD"
    echo "$USER:$PASSWORD" | sudo chpasswd
done

# Pro uƒçitele:
for USER in micha hrn zim pau han hor; do
    PASSWORD="$USER"
    
    echo "Changing password for $USER to $PASSWORD"
    echo "$USER:$PASSWORD" | sudo chpasswd
done

# Pro klienta:
echo "klient:klient" | sudo chpasswd
